@using VeterinerMVC.Models.EntityFramework
@model List<TedaviEkle>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>Hastalık Adı</th>
        <th>Uygulanan Tedavi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach( var tdv in Model)
        {
        <tr>
           
            <td>@tdv.HastalikAdi</td>
            <td>@tdv.UygulananTedavi</td>
            <td><a href="/Tedavi/Sil/@tdv.TedaviID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Tedavi/TedaviGetir/@tdv.TedaviID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="YeniTedavi?HayvanID=@Request.Params["HayvanID"] " class="btn btn-primary">Yeni Tedavi Ekle</a>
